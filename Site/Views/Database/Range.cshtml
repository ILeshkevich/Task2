@model Site.Models.ViewModels.PeriodViewModel
@{
    ViewData["Title"] = "Set table range";
}

<h2>Set table range</h2>


<form asp-action="Table" asp-controller="Database" method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group mt-3">
        <label asp-for="StartDate"></label>
        <input class="form-control" type="date" asp-for="StartDate" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="FinishDate"></label>
        <input class="form-control" type="date" asp-for="FinishDate" />
    </div>
    <div class="form-group mt-3">
        <label asp-for="Format"></label>
        <select class="custom-select" asp-for="Format">
            @foreach (var item in Model.FormatList)
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>
    <div class="form-group mt-3">
        <label asp-for="Type"></label>
        <select class="custom-select" asp-for="Type">
            @foreach (var item in Model.TypeList)
            {
                <option value="@item">@item</option>
            }
        </select>
    </div>
    <button class="btn btn-dark" type="submit">Submit</button>
</form>
