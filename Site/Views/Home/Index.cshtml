@using System.IO
@model FileInfo[]
@{
    ViewData["Title"] = "Select file";
}

<form  method="post">
    <a class="btn btn-primary mb-1" asp-action="Upload">Upload</a>

    <div asp-validation-summary="All"></div>

    <table class="table table-striped table-sm ">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Name</td>
                <td><button class="btn btn-dark" type="submit" asp-controller="Files" asp-action="Open" asp-route-name="@item.Name">Open</button></td>
                <td><button class="btn btn-dark" type="submit" asp-controller="Files" asp-action="Delete" asp-route-name="@item.Name">Delete</button></td>
            </tr>
            }
        </tbody>
    </table>


</form>