@using System.Data
@model DataTable
@{
    ViewData["Title"] = "Table";
}

<h1>Table</h1>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            @foreach (var item in Model.Columns)
            {
                <th>@item.ToString()</th>
            }
        </tr>
    </thead>
    <tbody>
        @{DataRow[] dataRows = Model.Select(); }
        @foreach (var row in dataRows)
        {
            <tr>
                @for (int i = 0; i < Model.Columns.Count; i++)
                {
                    <td>@row[i]</td>
                }
            </tr>
        }
    </tbody>
</table>